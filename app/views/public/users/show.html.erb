<div class="container">
  <div class="row">
    <div class="col-8">
      <h4 class="title"><strong><%= @user.username %>さんのマイページ</strong></h4>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th><%= image_tag @user.get_avatar(100,100), class:"mt-3 rounded-circle"; %></th>
            <td></td>
          </tr>
          <tr>
            <th>会員ID</th>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th>ユーザー名</th>
            <td><%= @user.username %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th>自己紹介</th>
            <td><%= @user.introduction %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-3 text-right mt-4">
      <%= link_to "編集", edit_user_path(@user), class:'btn btn-outline-secondary' %>
    </div>
    <div class="col-2 mt-4">
      <%=link_to "記事一覧へ", articles_path, class:'btn btn-outline-info' %>
    </div>
  </div>
</div>