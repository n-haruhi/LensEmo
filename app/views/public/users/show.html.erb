<div class="container">
  <div class="row">
    <div class="col-8">
      <h4 class="title"><strong><%= @user.username %>さんのマイページ</strong></h4>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>アイコン</th>
            <td><%= @user.avatar %></td>
          </tr>
          <tr>
            <th>会員ID</th>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th>ユーザー名</th>
            <td><%= @user.username %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th>自己紹介</th>
            <td><%= @user.introduction %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col offset-2">
      <%= link_to "編集する", edit_user_path(@user), class:'btn btn-success px-3' %>
    </div>
    <div class="col">
      <%=link_to "記事一覧を見る", admin_root_path, class:'btn btn-primary px-3' %>
    </div>
  </div>
</div>