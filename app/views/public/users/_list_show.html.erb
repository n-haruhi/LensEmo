<h3 class="title">プロフィール</h3>
  <div class="col my-4">
    <%= image_tag @user.get_avatar(100,100), class: "rounded-circle"; %>
  </div>
  <div class="row">
    <div class="col-md-4"><strong>ユーザー名</strong></div>
    <div class="col mb-3 mx-2"><%= user.username %></div>
  </div>
  <div class="row">
    <div class="col-md-4"><strong>自己紹介</strong></div>
    <div class="col mx-2"><%= user.introduction %></div>
  </div>

<!-- ログインしているユーザーと一致していたらボタンを表示 -->
<% if @user == current_user %>
  <div class="col mt-5">
    <%= link_to "プロフィール編集", edit_user_path(@user), class:'btn btn-outline-secondary' %>
  </div>
  <div class="col my-2">
    <%= link_to '応援した投稿', favorites_user_path(@user), class:'btn btn-outline-info' %>
  </div>
<% end %>
<div class="col">
  <%=link_to "みんなの投稿へ", posts_path, class:'btn btn-outline-info' %>
</div>