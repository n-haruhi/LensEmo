<div class="container">
  <h3>投稿詳細</h3>

  <h5>ユーザー名</h5>
  <p><%= @post.user.username %></p>

  <h5>タイトル</h5>
  <p><%= @post.title %></p>

  <h5>感情</h5>
  <p><%= @post.emotion %></p>

  <h5>本文</h5>
  <P><%= @post.body %></P>

  <p>投稿日時：<%= @post.created_at.strftime('%Y/%m/%d') %></p>


  <!-- ログインしているユーザーと一致していたらボタンを表示 -->
  <% if @post.user == current_user %>
    <%= link_to "編集", edit_post_path(@post.id) %>
    <%= link_to "削除", post_path(@post), method: :delete %>
  <% end %>

</div>