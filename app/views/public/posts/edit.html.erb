<div class="container">
  <h3>投稿編集</h3>

  <% if @post.errors.any? %>
    <%= @post.errors.count %>つのエラーにより変更を保存できませんでした。
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @post do |f| %>
  <div class="col mt-4 mb-3">
    <h5><strong>タイトル</strong></h5>
    <%= f.text_field :title %>
  </div>
  <div class="col my-3">
    <h5><strong>気持ち</strong></h5>
      <a>あなたの気持ちをきかせてください</a><br>
    <%= f.label :emotion_happiness, class: "checkbox-image" do %>
      <%= f.check_box :emotion, { multiple: true }, "happiness", nil %>
      <%= image_tag("happy.png", width: 80, height: 80) %><br>
      <%= "幸福" %>
    <% end %>
    <%= f.label :emotion_love, class: "checkbox-image" do %>
      <%= f.check_box :emotion, { multiple: true }, "love", nil %>
      <%= image_tag("happy.png", width: 80, height: 80) %><br>
      <%= "愛情" %>
    <% end %>
    <%= f.label :emotion_joy, class: "checkbox-image" do %>
      <%= f.check_box :emotion, { multiple: true }, "joy", nil %>
      <%= image_tag("happy.png", width: 80, height: 80) %><br>
      <%= "喜び" %>
    <% end %>
    <%= f.label :emotion_calm, class: "checkbox-image" do %>
      <%= f.check_box :emotion, { multiple: true }, "calm", nil %>
      <%= image_tag("happy.png", width: 80, height: 80) %><br>
      <%= "穏やか" %>
    <% end %>
    <%= f.label :emotion_hope, class: "checkbox-image" do %>
      <%= f.check_box :emotion, { multiple: true }, "hope", nil %>
      <%= image_tag("happy.png", width: 80, height: 80) %><br>
      <%= "希望" %>
    <% end %>
    <%= f.label :emotion_anxiety, class: "checkbox-image" do %>
      <%= f.check_box :emotion, { multiple: true }, "anxiety", nil %>
      <%= image_tag("sad.png", width: 80, height: 80) %><br>
      <%= "不安" %>
    <% end %>
    <%= f.label :emotion_sadness, class: "checkbox-image" do %>
      <%= f.check_box :emotion, { multiple: true }, "sadness", nil %>
      <%= image_tag("sad.png", width: 80, height: 80) %><br>
      <%= "悲しみ" %>
    <% end %>
    <%= f.label :emotion_fear, class: "checkbox-image" do %>
      <%= f.check_box :emotion, { multiple: true }, "fear", nil %>
      <%= image_tag("sad.png", width: 80, height: 80) %><br>
      <%= "恐怖" %>
    <% end %>
    <%= f.label :emotion_disgust, class: "checkbox-image" do %>
      <%= f.check_box :emotion, { multiple: true }, "disgust", nil %>
      <%= image_tag("sad.png", width: 80, height: 80) %><br>
      <%= "嫌悪" %>
    <% end %>
    <%= f.label :emotion_anger, class: "checkbox-image" do %>
      <%= f.check_box :emotion, { multiple: true }, "anger", nil %>
      <%= image_tag("sad.png", width: 80, height: 80) %><br>
      <%= "怒り" %>
    <% end %>
  </div>
  <div class="col my-3">
    <h5><strong>本文</strong></h5>
    <%= f.text_area :body, rows: 7, cols: 90 %>
  </div>
  <div class="col my-3">
    <h5><strong>タグ <i class="fa-solid fa-tags"></i></strong></h5>
    <!-- db/seeds.rbで設定したデフォルトタグをここで表示 -->
    <div class='form-group'>
      <div class="row">
        <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
          <div class="col-md-2">
            <div class='form-check'>
                <%= tag.label class: 'form-check-label' do %>
                    <%= tag.check_box class: 'form-check-input' %>
                    <%= tag.text %>
                <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col my-3">
    <%= f.submit '変更を保存', class: "btn btn-outline-success btn-sm" %>
  </div>
  <% end %>
</div>