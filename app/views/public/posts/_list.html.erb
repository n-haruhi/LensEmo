<!-- 投稿一覧 -->
<div class="col my-3">
  <% posts.each do |post| %>
    <div class="card w-100 mb-2">
      <div class="card-body">
        <!-- カード全体にリンクを貼る -->
        <%= link_to post_path(post.id), class: "stretched-link" do %>
          <div class="row">
            <div class="col card-title text-left">
              <%= image_tag post.get_avatar(55,55), class: "mb-2 rounded-circle" %>
              <strong><%= link_to post.user.username, user_path(post.user), class: "mx-2 text-dark" %></strong>
            </div>
            <div class="col card-title text-right text-secondary">
              <i class="fa-regular fa-clock"></i> <%= post.created_at.strftime('%Y/%m/%d') %>
            </div>
          </div>

          <p class="card-text"><%= truncate(post.body, length: 80) %></p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>