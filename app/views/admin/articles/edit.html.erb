<div class="container">
  <h3>管理者　記事編集</h3>

  <% if @article.errors.any? %>
    <%= @article.errors.count %>つのエラーにより変更を保存できませんでした。
    <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @article, url: admin_article_path(@article), method: :patch do |f| %>
  <div class="col mt-4 mb-3">
    <h5><strong>タイトル</strong></h5>
    <%= f.text_field :title %>
  </div>
  <div class="col my-3">
    <h5><strong>本文</strong></h5>
    <%= f.text_area :body, rows: 7, cols: 90 %>
  </div>

  <div class="col my-3">
    <%= f.submit '変更を保存', class: "btn btn-outline-success btn-sm" %>
  </div>
  <% end %>
</div>