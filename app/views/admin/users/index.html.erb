<div class = "container">
  <div class = "row">
    <div class "col-md-4 px-sm-0 mx-auto ">
      <h3>会員一覧</h3>
    </div>
    <div class = "col-md-7 offset-md-1 mt-5 pt-2 ">
      <table class = "table  ">
        <thead>
          <tr>
            <th class = "table-active">会員ID</th>
            <th class = "table-active">ユーザー名</th>
            <th class = "table-active">メールアドレス</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |users| %>
          <tr>
            <td ><%= uers.id %></td>
            <td >
              <%= link_to admin_user_path(users.id) do %>
              <%= users.username %>
              <% end %>
            </td>
            <td ><%= users.email %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="col d-flex justify-content-center" >
      <%= paginate @users %>
      </div>
    </div>
  </div>
</div>
