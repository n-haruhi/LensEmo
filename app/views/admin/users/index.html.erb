<div class = "container">
  <div class "col">
    <h3>会員一覧</h3>
  </div>
  <div class = "col mt-4 mb-3">
    <table class = "table table-hover">
      <thead>
        <tr style="background: #dad2bf;">
          <th></th>
          <th>会員ID</th>
          <th>ユーザー名</th>
          <th>メールアドレス</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |users| %>
        <tr>
          <td>
            <%= image_tag users.get_avatar(50,50), class:"rounded-circle"; %>
          </td>
          <td><%= users.id %></td>
          <td>
            <%= link_to admin_user_path(users.id) do %>
            <%= users.username %>
            <% end %>
          </td>
          <td ><%= users.email %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="col d-flex justify-content-center" >
    <%= paginate @users %>
    </div>
  </div>
</div>
